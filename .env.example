# =============================================================================
# Chat-Arena-Backend Environment Variables
# =============================================================================
# IMPORTANT: Copy this file to .env and fill in the values
# NEVER commit .env to version control!
# =============================================================================

# =============================================================================
# CRITICAL SECURITY SETTINGS
# =============================================================================

# Django Secret Key - MUST be unique and secret in production
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-unique-secret-key-here-minimum-50-characters

# Debug Mode - MUST be False in production
DEBUG=False

# Allowed Hosts - comma-separated list of domains
ALLOWED_HOSTS=backend.arena.ai4bharat.org,backend.dev.arena.ai4bharat.org

# HTTPS Redirect - set to True in production
SECURE_SSL_REDIRECT=True

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DB_NAME=arena_db
DB_USER=arena_user
DB_PASSWORD=your-strong-database-password
DB_HOST=db
DB_PORT=5432

# Secondary database (if used)
AQUARIUM_DB_NAME=aquarium_db
AQUARIUM_DB_USER=aquarium_user
AQUARIUM_DB_PASSWORD=your-strong-aquarium-password
AQUARIUM_DB_HOST=db
AQUARIUM_DB_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-strong-redis-password

# Channel Layer Encryption Key (optional, defaults to SECRET_KEY)
CHANNEL_ENCRYPTION_KEY=your-separate-encryption-key

# =============================================================================
# AI PROVIDER API KEYS
# =============================================================================

OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_API_KEY_GPT_5=sk-your-gpt5-api-key
GOOGLE_API_KEY=your-google-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
META_API_KEY=your-meta-api-key
MISTRAL_API_KEY=your-mistral-api-key
DEEPINFRA_API_KEY=your-deepinfra-api-key
SARVAM_API_KEY=your-sarvam-api-key
SARVAM_M_API_KEY=your-sarvam-m-api-key
SARVAM_API_KEY_BULBUL=your-sarvam-bulbul-key

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Path to Firebase service account key (for server-side auth)
# IMPORTANT: Keep this file outside the repository!
FIREBASE_CREDENTIALS_PATH=/path/to/serviceAccountKey.json

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================

GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GS_BUCKET_NAME=your-bucket-name

# =============================================================================
# TTS/ASR SERVICE CONFIGURATION
# =============================================================================

MISC_TTS_API_URL=https://your-tts-api-url
INDO_ARYAN_TTS_API_URL=https://your-indo-aryan-tts-url
DRAVIDIAN_TTS_API_URL=https://your-dravidian-tts-url
DHRUVA_KEY=your-dhruva-api-key
DHRUVA_SERVICE_ID=your-dhruva-service-id
ELEVENLABS_API_URL=https://api.elevenlabs.io/v1
PARLER_API_URL=https://your-parler-api-url

# =============================================================================
# TRANSLITERATION SERVICE
# =============================================================================

TRANSLITERATION_URL=https://your-transliteration-service-url/
TRANSLITERATION_KEY=your-transliteration-api-key

# =============================================================================
# DOCKER COMPOSE
# =============================================================================

COMPOSE_PROJECT_NAME=chat-arena
